--  @testpoint: ◾将epoch值转换为时间戳的方法加时区reltime类型正数
SELECT TIMESTAMP WITH TIME ZONE 'epoch' + 720.12 * reltime '60' AS RESULT;
+-------------------------------+
| result                        |
+-------------------------------+
| 2090-01-08 12:48:00.000000000 |
+-------------------------------+
SELECT TIMESTAMP WITH TIME ZONE 'epoch' + 1 * reltime '31.25' AS RESULT;
+-------------------------------+
| result                        |
+-------------------------------+
| 1970-02-02 14:00:00.000000000 |
+-------------------------------+
SELECT TIMESTAMP WITH TIME ZONE 'epoch' + 1.5 * reltime '1 years 1 mons 8 days 12:00:00' AS RESULT;
+-------------------------------+
| result                        |
+-------------------------------+
| 1971-08-29 02:00:00.000000000 |
+-------------------------------+
SELECT TIMESTAMP WITH TIME ZONE 'epoch' + 0 * reltime 'P-1.1Y10M' AS RESULT;
+-------------------------------+
| result                        |
+-------------------------------+
| 1970-01-01 08:00:00.000000000 |
+-------------------------------+
